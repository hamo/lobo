- @posts.each do |post|
  .link

    - if post.author == @user
      = partial 'post/post', :locals => {:post => post }
    - else
      = partial 'post/post_with_user_comments', :locals => { :post => post, :user => @user }

    .clearleft

= partial 'post/pagination', :locals => {:items => @posts, :show_detail => false}
