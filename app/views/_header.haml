-#http://twitter.github.com/bootstrap/components.html#navs
%header
  .navbar.navbar-inverse
    .navbar-inner
      .container{:style => 'width:auto;'}
        %a.btn.btn-navbar{:'data-toggle' => 'collapse', :'data-target' => '.nav-collapse'}
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar

        .btn-group.pull-right
          - unless logged_in?
            %a.btn.btn-success(href='/login') 登录
            %a.btn.btn-warning(href='/register') 注册
          - else
            %a.btn.btn-info{:href => user_path(current_user) }
              = current_user.name
              - if total_unread > 0
                %span.badge.badge-important= total_unread
            %a.btn.btn-inverse(href='/logout')
              %i.icon-signout

        .brand-items
          .brand-content= link_to(logo, '/')
          .brand-content.brand{:style => 'margin: 0;'}= link_to '嘟噜', '/'

        .nav-collapse
          %ul.nav
            =partial header_nav
