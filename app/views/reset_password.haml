%form.form-horizontal.validate-form(action="/reset_password/#{params[:user_id]}/#{params[:reset_hash]}" method='post')
  .fieldset
    .control-group
      %label.control-label(for="password") 请输入新密码
      .controls
        %input.input-large(type="password" name="password" )/

    .control-group
      %label.control-label(for="password") 请确认新密码
      .controls
        %input.control-large(type="password" name="password_confirmation" )/

    .form-actions
      %button.btn.btn-danger.btn-large(type="submit") 
        %i.icon-exclamation-sign
        确定更改

      %a.btn.btn-large(href='/')
        %i.icon-arrow-left
        返回首页
